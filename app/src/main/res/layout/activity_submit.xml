<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.creedglobal.survey.surveyportal.launch.Submit">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edt_customer_name"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@android:drawable/editbox_background_normal"
        android:layout_marginTop="5dp"
        android:hint="full name" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/edt_customer_email"
        android:layout_below="@+id/edt_customer_name"
        android:layout_centerHorizontal="true"
        android:background="@android:drawable/editbox_background_normal"
        android:layout_marginTop="5dp"
        android:hint="email address" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/edt_customer_mobile"
        android:layout_below="@+id/edt_customer_email"
        android:layout_centerHorizontal="true"
        android:background="@android:drawable/editbox_background_normal"
        android:layout_marginTop="5dp"
        android:hint="mobile number" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="120sp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/edt_customer_msg"
        android:layout_below="@+id/edt_customer_mobile"
        android:layout_centerHorizontal="true"
        android:background="@android:drawable/editbox_background_normal"
        android:layout_marginTop="5dp"
        android:hint="suggestion ..." />

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/submit"
        android:id="@+id/btn_submit"
        android:textAllCaps="false"
        android:layout_below="@+id/edt_customer_msg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:background="@drawable/com_facebook_tooltip_blue_background"
        android:onClick="submit" />
</RelativeLayout>
